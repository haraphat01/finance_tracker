<h1>Articles#new</h1>
<p>Find me in app/views/articles/new.html.erb</p>

<%= form_with scope: :article, url: articles_path, local: true do |form| %>
<p>    <%= form.label :title %><br>    <%= form.text_field :title %>  </p>  
 <p>    <%= form.label :text %><br>    <%= form.rich_text_area :text %>  </p>   
 <p>    <%= form.submit %>  </p>
 <% end %>
